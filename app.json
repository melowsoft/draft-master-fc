{
  "expo": {
    "name": "DraftMaster FC",
    "slug": "draftmaster-fc",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "draftmasterfc",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "bundleIdentifier": "com.draftmasterfc.app",
      "buildNumber": "1.0.0",
      "supportsTablet": true,
      "config": {
        "usesAppleSignIn": true
      },
      "infoPlist": {
        "CFBundleURLTypes": [
          {
            "CFBundleURLSchemes": ["draftmasterfc"]
          }
        ],
        "NSFaceIDUsageDescription": "Allow DraftMaster FC to use Face ID for secure authentication"
      }
    },
    "android": {
      "package": "com.draftmasterfc.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-apple-authentication",
        {
          "appleTeamId": "V4T2JT845M"
        }
      ],
      // [
      //   "expo-auth-session",
      //   {
      //     "redirectUri": "draftmasterfc://"
      //   }
      // ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share lineups and chat images.",
          "cameraPermission": "The app accesses your camera to take photos for lineups."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "your-eas-project-id"
      }
    }
  }
}